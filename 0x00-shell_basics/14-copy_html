#!/bin/bash



# Get the parent directory of the current working directory

parent_dir=$(dirname "$(pwd)")



# Loop through all the .html files in the current working directory

for file in *.html; do

    # Check if the file already exists in the parent directory

    if [ -f "$parent_dir/$file" ]; then

        # Check if the file in the current working directory is newer than the file in the parent directory

        if [ "$file" -nt "$parent_dir/$file" ]; then

            # Copy the file from the current working directory to the parent directory

            cp "$file" "$parent_dir/$file"

            echo "Copied $file to $parent_dir"

        fi

    else

        # Copy the file from the current working directory to the parent directory

        cp "$file" "$parent_dir/$file"

        echo "Copied $file to $parent_dir"

    fi

done


